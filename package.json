{
  "name": "bigpipe",
  "version": "0.0.4",
  "description": "Bigpipe a radical new web framework for Node.js that's inspired by Facebook's bigpipe concept.",
  "main": "index.js",
  "engine": "node >= 0.10.0",
  "scripts": {
    "test": "mocha $(find test -name '*.test.js')",
    "compile": "./node_modules/.bin/browserify pipe/index.js -o dist/pipe.js --standalone BigPipe",
    "pretest": "npm run-script compile",
    "prepublish": "npm run-script compile",
    "watch": "./node_modules/.bin/watchify pipe/index.js -o dist/pipe.js --standalone BigPipe -v",
    "build": "npm run-script compile"
  },
  "pre-commit": [
    "compile",
    "test"
  ],
  "dependencies": {
    "async": "0.2.x",
    "debug": "0.7.x",
    "eventemitter3": "0.1.x",
    "expirable": "0.0.x",
    "fortress": "0.0.x",
    "jade": "0.35.x",
    "mkdirp": "0.3.x",
    "primus": "1.4.x",
    "routable": "0.0.x",
    "smithy": "0.3.x",
    "substream": "0.0.x",
    "temper": "0.0.x",
    "ws": "0.4.x",
    "formidable": "1.0.x",
    "trailers": "0.0.x",
    "fusing": "0.0.x",
    "pagelet": "0.0.x"
  },
  "devDependencies": {
    "chai": "1.8.x",
    "mocha": "1.13.x",
    "pre-commit": "0.0.x",
    "browserify": "2.33.x",
    "watchify": "0.3.x"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bigpipe/bigpipe.git"
  },
  "keywords": [
    "pagelet",
    "pagelets",
    "realtime",
    "real-time",
    "framework",
    "bigpipe"
  ],
  "author": "Arnout Kazemier",
  "license": "MIT"
}
